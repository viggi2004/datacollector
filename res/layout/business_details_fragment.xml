            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_small_h"
            android:layout_width="43.5dp"
            android:layout_height="4dp"/>
        <Button
            android:id="@+id/page_indicator_btn_two"
            android:gravity="center"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:visibility="visible"
        android:id="@+id/edit_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />
            <View 
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="2dp"
                android:background="@drawable/saparetor"/>

            <TextView
                android:textColor="#3D3D3D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Business Category (*)"
                android:textSize="16sp"
                android:textStyle="bold" />

                        
            <LinearLayout 
                android:id="@+id/business_category_layout"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="16dp"
                
                android:background="@drawable/input"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout 
                    android:layout_marginRight="16dp"
                    android:id="@+id/business_category_rows_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/business_specific_layout">
                
            </LinearLayout>
           
          <!--    <TextView
                android:textColor="#3D3D3D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Business Name"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText 
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/contact_details_edit_text_background"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>
           
            <TextView
                android:textColor="#3D3D3D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Business Address"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText 
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_details_edit_text_background"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"/>-->
               <Button 
        android:id="@+id/proceed_button"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:text="Proceed"/>
        </LinearLayout>
    </ScrollView>
    
    <ScrollView
        android:visibility="gone"
        android:id="@+id/view_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:scrollbars="none" >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
               <TextView 
        android:id="@+id/view_business_name"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor = "#487AC8"
        android:textStyle="bold"/>
    
    <TextView 
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Business Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    
    <View 
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/saparetor"/>
    
    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dip"
            android:gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:text="Business Category"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"/>
       <LinearLayout 
            android:id="@+id/categories_layout"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_width="0dip"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            
            
            </LinearLayout>

</LinearLayout>
            <LinearLayout 
                android:id="@+id/view_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
            </LinearLayout>
            <Button 
        android:id="@+id/view_next"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:text="Next"/>
        </LinearLayout>
        </ScrollView>
     
    

</LinearLayout>
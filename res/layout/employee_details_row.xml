<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#b2b2b2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="Name"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/title_time_spent"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="0.8"
            android:drawableRight="@drawable/empty_drawable"
            android:gravity="center_vertical|left"
            android:linksClickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Time Count"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/title_business_collected"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_up_float"
            android:gravity="center_vertical|left"
            android:linksClickable="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Business Collected"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="Nijandhan" />

        <TextView
            android:id="@+id/time_spent"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="2Days" />

        <TextView
            android:id="@+id/business_collected"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="50" />
    </LinearLayout>

</LinearLayout>